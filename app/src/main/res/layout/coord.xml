<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        layout="@layout/list_item_divider_small"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/room_footer_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/room_footer" />

    <TextView
        android:id="@+id/room_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/room_footer_img"
        android:gravity="center_vertical"
        android:text="Wohnzimmer"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/group_room_list_item_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/room_footer_edit"
        app:layout_constraintLeft_toRightOf="@+id/room_footer_img"
        app:layout_constraintRight_toLeftOf="@+id/room_footer_edit"
        app:layout_constraintTop_toTopOf="@+id/room_footer_edit" />

    <ImageView
        android:id="@+id/room_footer_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:padding="10dp"
        android:src="@drawable/ic_lead_pencil_grey600_24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>